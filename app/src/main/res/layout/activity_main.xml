<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.priya.intent_demo_lec6.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtHead_ma1" />

    <EditText
        android:id="@+id/edtTxt_ma1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtTxt_ma1"/>
    <EditText
        android:id="@+id/edtTxt2_ma1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtTxt2_ma1"/>
    <Button
        android:id="@+id/btn_ma1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ma1"/>

    <ListView
        android:id="@+id/ls_view1_ma1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/bg_key"
        android:choiceMode="singleChoice"
        android:clickable="true">

    </ListView>
</LinearLayout>
